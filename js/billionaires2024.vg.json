{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "topN",
      "value": 20,
      "bind": {
        "input": "range",
        "min": 10,
        "max": 30,
        "step": 1,
        "name": "Top # Billionaires: "
      }
    },
    {
      "name": "maxPopulation",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 1,
        "name": "Zoom: "
      }
    }
  ],
  "vconcat": [
    {
      "title": "Global Distribution of Billionaire Wealth",
      "width": 800,
      "height": 400,
      "layer": [
        {
          "data": {
            "graticule": true
          },
          "mark": {
            "type": "geoshape",
            "stroke": "#ccc",
            "strokeWidth": 0.5
          },
          "projection": {
            "type": "equalEarth"
          }
        },
        {
          "projection": { "type": "equalEarth" },
          "data": {
            "url": "https://raw.githubusercontent.com/chuiwinnie/3179/main/js/ne_50m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_50m_admin_0_countries"
            }
          },
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/chuiwinnie/3179/main/data/Billionaires_Data.csv"
                },
                "key": "Country",
                "fields": ["Total_Net_Worth", "Number_of_Billionaires"]
              }
            },
            {
              "calculate": "datum.Total_Net_Worth",
              "as": "Total Net Worth"
            },
            {
              "calculate": "log(datum['Total Net Worth'] + 1) - 23 < 0 ? 0 : log(datum['Total Net Worth'] + 1) - 23",
              "as": "Log Total Net Worth"
            },
            {
              "calculate": "datum['Total Net Worth'] >= 1e9 ? '$' + format(datum['Total Net Worth'] / 1e9, ',.1f') + 'B' : '$0B'",
              "as": "Formatted Total Net Worth"
            },
            {
              "calculate": "datum.Number_of_Billionaires != null ? datum.Number_of_Billionaires : 0",
              "as": "Number of Billionaires"
            },
            {
              "calculate": "datum.properties.NAME",
              "as": "selected"
            }
          ],
          "mark": {
            "type": "geoshape",
            "stroke": "#808080",
            "strokeWidth": 0.5
          },
          "encoding": {
            "color": {
              "field": "Log Total Net Worth",
              "type": "quantitative",
              "scale": {
                "type": "linear",
                "scheme": "greenblue"
              },
              "legend": {
                "title": "Total Net Worth (USD)",
                "labelExpr": "datum.value == 0 ? '$0B' : datum.value == 2 ? '$10B' : datum.value == 4 ? '$50B' : datum.value == 6 ? '$500B' : datum.value == 8 ? '$5000B' : ''",
                "values": [0, 2, 4, 6, 8],
                "offset": -120
              }
            },
            "opacity": {
              "condition": {
                "test": "selectedCountry.selected && datum.properties.NAME !== selectedCountry.selected[0]",
                "value": 0.3
              }
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "Formatted Total Net Worth",
                "type": "nominal",
                "title": "Total Net Worth (USD)"
              },
              {
                "field": "Number of Billionaires",
                "type": "quantitative",
                "title": "Number of Billionaires"
              }
            ]
          },
          "params": [
            {
              "name": "selectedCountry",
              "select": {
                "type": "point",
                "fields": ["selected"],
                "on": "click"
              }
            }
          ]
        }
      ]
    },
    {
      "hconcat": [
        {
          "title": {
            "text": {
              "expr": "selectedCountry.selected ? 'Top ' + topN + ' Billionaires in ' + selectedCountry.selected[0] : 'Top ' + topN + ' Billionaires Globally'"
            }
          },
          "width": 500,
          "height": 400,
          "data": {
            "url": "https://raw.githubusercontent.com/chuiwinnie/3179/main/data/Billionaires_Data.csv",
            "format": { "type": "csv" }
          },
          "transform": [
            {
              "filter": "datum['Net Worth'] != null"
            },
            {
              "calculate": "toNumber(datum['Net Worth'])",
              "as": "Net Worth"
            },
            {
              "calculate": "datum['Net Worth'] >= 1e9 ? '$' + format(datum['Net Worth'] / 1e9, ',.1f') + 'B' : '$0B'",
              "as": "Formatted Net Worth"
            },
            {
              "filter": "!selectedCountry.selected || datum.Country == selectedCountry.selected[0] "
            },
            {
              "window": [
                {
                  "op": "rank",
                  "as": "Net Worth Rank"
                }
              ],
              "sort": [
                {
                  "field": "Net Worth",
                  "order": "descending"
                }
              ]
            },
            {
              "filter": "datum['Net Worth Rank'] <= topN"
            }
          ],
          "mark": {
            "type": "bar",
            "color": "forestgreen"
          },
          "encoding": {
            "x": {
              "field": "Name",
              "type": "nominal",
              "axis": {
                "labelAngle": -45,
                "title": "Billionaire"
              },
              "sort": null
            },
            "y": {
              "field": "Net Worth",
              "type": "quantitative",
              "title": "Net Worth (USD)",
              "axis": {
                "format": "$,.1f",
                "labelExpr": "'$' + format(datum.value/1000000000, ',.0f') + 'B'"
              }
            },
            "tooltip": [
              { "field": "Name", "type": "nominal", "title": "Billionaire" },
              {
                "field": "Formatted Net Worth",
                "type": "nominal",
                "title": "Net Worth (USD)"
              }
            ]
          }
        },
        {
          "title": {
            "text": {
              "expr": "selectedCountry.selected ? 'Age and Gender Breakdown of Billionaires in ' + selectedCountry.selected[0] : 'Age and Gender Breakdown of Billionaires Globally'"
            }
          },
          "data": {
            "name": "dataset",
            "url": "https://raw.githubusercontent.com/chuiwinnie/3179/main/data/Billionaires_Data.csv",
            "format": { "type": "csv" }
          },
          "transform": [
            {
              "filter": "!selectedCountry.selected || datum.Country == selectedCountry.selected[0]"
            },
            {
              "filter": "datum.Age != null && datum.Gender != null && datum.Age != 0"
            },
            {
              "calculate": "toNumber(datum.Age)",
              "as": "Age"
            },
            {
              "calculate": "floor(datum.Age / 5) * 5 + 1 + '-' + (floor(datum.Age / 5) * 5 + 5)",
              "as": "AgeGroup"
            },
            {
              "pivot": "Gender",
              "value": "Age",
              "groupby": ["AgeGroup"],
              "op": "count",
              "key": "Gender",
              "pivotConfig": { "fill": 0 }
            },
            {
              "fold": ["F", "M"],
              "as": ["Gender", "Population"]
            }
          ],
          "spacing": 0,
          "hconcat": [
            {
              "width": 200,
              "height": 400,
              "transform": [
                {
                  "filter": { "field": "Gender", "equal": "F" }
                }
              ],
              "layer": [
                {
                  "mark": {
                    "type": "bar",
                    "clip": true
                  },
                  "encoding": {
                    "y": {
                      "field": "AgeGroup",
                      "type": "ordinal",
                      "axis": null,
                      "sort": [
                        "101-105",
                        "96-100",
                        "91-95",
                        "86-90",
                        "81-85",
                        "76-80",
                        "71-75",
                        "66-70",
                        "61-65",
                        "56-60",
                        "51-55",
                        "46-50",
                        "41-45",
                        "36-40",
                        "31-35",
                        "26-30",
                        "21-25",
                        "16-20"
                      ]
                    },
                    "x": {
                      "field": "Population",
                      "type": "quantitative",
                      "title": "Female Population",
                      "sort": "descending",
                      "scale": {
                        "domain": [0, { "expr": "350-maxPopulation*3.45" }]
                      }
                    },
                    "color": {
                      "value": "pink"
                    },
                    "tooltip": [
                      {
                        "field": "AgeGroup",
                        "type": "nominal",
                        "title": "Age Group"
                      },
                      {
                        "field": "Population",
                        "type": "quantitative",
                        "title": "Population"
                      }
                    ]
                  }
                },
                {
                  "mark": {
                    "type": "text",
                    "align": "left",
                    "fontStyle": "italic"
                  },
                  "transform": [{ "filter": "maxPopulation === 0 && !selectedCountry.selected" }],
                  "encoding": {
                    "text": {
                      "value": [
                        "Male billionaires significantly",
                        "outnumber female billionaires,",
                        "highlighting a gender disparity",
                        "in the highest echelons of wealth."
                      ]
                    },
                    "x": { "value": 10 },
                    "y": { "value": 100 }
                  }
                }
              ]
            },
            {
              "width": 10,
              "height": 400,
              "view": { "stroke": null },
              "mark": { "type": "text", "align": "center" },
              "encoding": {
                "y": {
                  "field": "AgeGroup",
                  "type": "ordinal",
                  "axis": null,
                  "sort": [
                    "101-105",
                    "96-100",
                    "91-95",
                    "86-90",
                    "81-85",
                    "76-80",
                    "71-75",
                    "66-70",
                    "61-65",
                    "56-60",
                    "51-55",
                    "46-50",
                    "41-45",
                    "36-40",
                    "31-35",
                    "26-30",
                    "21-25",
                    "16-20"
                  ]
                },
                "text": { "field": "AgeGroup", "type": "nominal" }
              }
            },
            {
              "width": 200,
              "height": 400,
              "transform": [
                {
                  "filter": { "field": "Gender", "equal": "M" }
                }
              ],
              "mark": {
                "type": "bar",
                "clip": true
              },
              "encoding": {
                "y": {
                  "field": "AgeGroup",
                  "type": "ordinal",
                  "axis": null,
                  "sort": [
                    "101-105",
                    "96-100",
                    "91-95",
                    "86-90",
                    "81-85",
                    "76-80",
                    "71-75",
                    "66-70",
                    "61-65",
                    "56-60",
                    "51-55",
                    "46-50",
                    "41-45",
                    "36-40",
                    "31-35",
                    "26-30",
                    "21-25",
                    "16-20"
                  ]
                },
                "x": {
                  "field": "Population",
                  "type": "quantitative",
                  "title": "Male Population",
                  "scale": {
                    "domain": [0, { "expr": "350-maxPopulation*3.45" }]
                  }
                },
                "color": {
                  "value": "skyblue"
                },
                "tooltip": [
                  {
                    "field": "AgeGroup",
                    "type": "nominal",
                    "title": "Age Group"
                  },
                  {
                    "field": "Population",
                    "type": "quantitative",
                    "title": "Population"
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
