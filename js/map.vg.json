{
  "title": "Global Distribution of Billionaire Wealth",
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "layer": [
    {
      "data": {
        "graticule": true
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#ccc",
        "strokeWidth": 0.5
      },
      "projection": {
        "type": "equalEarth"
      }
    },
    {
      "projection": { "type": "equalEarth" },
      "data": {
        "url": "https://raw.githubusercontent.com/chuiwinnie/3179/main/js/ne_50m.json",
        "format": { "type": "topojson", "feature": "ne_50m_admin_0_countries" }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/chuiwinnie/3179/main/data/Map_Data.csv"
            },
            "key": "Country",
            "fields": ["Total_Net_Worth", "Number_of_Billionaires"]
          }
        },
        {
          "calculate": "isValid(datum.Total_Net_Worth) ? datum.Total_Net_Worth : 0",
          "as": "Total Net Worth"
        },
        {
          "calculate": "datum.Number_of_Billionaires != null ? datum.Number_of_Billionaires : 0",
          "as": "Number of Billionaires"
        },
        {
          "calculate": "datum['Total Net Worth'] >= 1e9 ? '$' + format(datum['Total Net Worth'] / 1e9, '.1f') + 'B' : '$0B'",
          "as": "Formatted Total Net Worth"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#808080",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Total Net Worth",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              1000000000, 10000000000, 100000000000, 500000000000, 750000000000,
              1000000000000, 2500000000000, 5000000000000
            ],
            "range": [
              "#eef8eb",
              "#d4eece",
              "#9fdab8",
              "#7accc4",
              "#57b8d0",
              "#389bc6",
              "#1d7eb7",
              "#085fa3",
              "#064372"
            ]
          },
          "legend": {
            "title": "Total Net Worth (USD)",
            "labelExpr": "datum.value >= 1e9 ? '$' + format(datum.value / 1e9, '.0f') + 'B' : ''"
          }
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          {
            "field": "Formatted Total Net Worth",
            "type": "nominal",
            "title": "Total Net Worth (USD)"
          },
          {
            "field": "Number of Billionaires",
            "type": "quantitative",
            "title": "Number of Billionaires"
          }
        ]
      }
    }
  ]
}
